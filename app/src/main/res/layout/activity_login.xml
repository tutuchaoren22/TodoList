<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logo_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logo_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/logo_image"
        android:src="@drawable/todo_list_logo"
        app:layout_constraintBottom_toBottomOf="@id/logo_bottom"
        app:layout_constraintEnd_toEndOf="@id/margin_right"
        app:layout_constraintStart_toStartOf="@id/margin_left"
        app:layout_constraintTop_toTopOf="@id/logo_top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/user_name"
        android:background="@drawable/login_input_background"
        android:hint="@string/user_name"
        android:inputType="text"
        android:paddingVertical="@dimen/login_input_padding_vertical"
        app:layout_constraintEnd_toEndOf="@id/margin_right"
        app:layout_constraintStart_toStartOf="@id/margin_left"
        app:layout_constraintTop_toTopOf="@id/user_name" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/password"
        android:background="@drawable/login_input_background"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingVertical="@dimen/login_input_padding_vertical"
        app:layout_constraintEnd_toEndOf="@id/margin_right"
        app:layout_constraintStart_toStartOf="@id/margin_left"
        app:layout_constraintTop_toTopOf="@id/password" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <Button
        android:id="@+id/log_in_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_not_allow_background"
        android:paddingVertical="@dimen/login_button_padding_vertical"
        android:text="@string/login"
        android:textSize="@dimen/login_button_text_size"
        app:layout_constraintEnd_toEndOf="@id/margin_right"
        app:layout_constraintStart_toStartOf="@id/margin_left"
        app:layout_constraintTop_toTopOf="@id/log_in" />
</androidx.constraintlayout.widget.ConstraintLayout>